{
    "name": "botble/widget",
    "description": "Widget package for Laravel CMS application",
    "type": "package",
    "autoload": {
        "psr-4": {
            "Platform\\Widget\\": "src"
        }
    },
    "require": {
        "botble/platform": "*@dev",
        "botble/theme": "*@dev"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Platform\\Widget\\Providers\\WidgetServiceProvider"
            ],
            "aliases": {
                "Widget": "Platform\\Widget\\Facades\\WidgetFacade",
                "WidgetGroup": "Platform\\Widget\\Facades\\WidgetGroupFacade"
            }
        }
    }
}
